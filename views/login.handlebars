<div class="columns mt-5">
  <div class="column card m-5">
    <h2 class="card-header-title is-justify-content-center">Login</h2>

    <form class="form login-form">
      <div class="field">
        <p class="control has-icons-left">
          <input class="input" type="text" id="email-login" placeholder="Email"/>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </p>
      </div>
      <div class="field">
        <p class="control has-icons-left">
          <input class="input" type="password" id="password-login" placeholder="Password" />
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </p>
      </div>
      <div class="form-group">
        <button class="button is-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="column card m-5 mt-5">
    <h2 class="card-header-title is-justify-content-center">Signup</h2>

    <form class="form signup-form">
      <div class="field">
        <input class="input" type="text" id="name-signup" placeholder="Your Name" />
      </div>
      <div class="field">
        <p class="control has-icons-left">
        <input class="input" type="text" id="email-signup" placeholder="Email"/>
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
        </p>
      </div>
      <div class="field">
        <p class="control has-icons-left">
        <input class="input" type="password" id="password-signup" placeholder="Password"/>
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
        </p>
      </div>
      <div class="form-group">
        <button class="button is-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>